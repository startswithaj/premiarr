# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
# Optional: for forum/topic groups, specify the topic ID
TELEGRAM_TOPIC_ID=

# Jellyseerr/Seerr
SEERR_URL=http://localhost:5055
SEERR_API_KEY=your_seerr_api_key_here

# Scheduling (cron expressions)
# Daily new shows announcement (default: 8am daily)
DAILY_CRON=0 8 * * *

# Rotten Tomatoes filters (e.g., "critics:fresh~sort:newest", "audience:upright~sort:newest")
RT_TV_FILTER=critics:fresh~sort:newest
RT_MOVIE_FILTER=critics:fresh~sort:newest

# Run mode: "daemon" for long-running, "cron" for single execution
RUN_MODE=daemon

# Run the fetch immediately on startup (useful for testing)
RUN_ON_STARTUP=false

# Database path
DB_PATH=./data/premiarr.db

# Log level: debug, info, warn, error
LOG_LEVEL=info
